extends layout

block flash
  - var flashClass = "col-xs-12 col-sm-6 col-sm-offset-3";

block body
  .row
    .col-xs-12.col-sm-6.col-sm-offset-3
      .panel.panel-default#profile
        .panel-heading
          h4 Add Email
        form.bs-example.form-horizontal(method='post', action='/login/twitter/callback')
          .panel-body
            fieldset
              .form-group
                .col-lg-12
                  input#username.form-control(name='email', type='email', value=user.email, placeholder='Email')
          .panel-footer
            button.pull-right.btn.btn-primary(type='submit', value="delete") Submit
            .clearfix
