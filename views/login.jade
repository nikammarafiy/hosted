extends layout

block flash 
  - var flashClass = "col-xs-12 col-sm-8 col-sm-offset-2"; 
block body
  .row
    .col-xs-12.col-sm-4.col-sm-offset-2
      .panel.panel-default#login
        .panel-heading
          h4 Login
        form.bs-example.form-horizontal(method='post', action='')
          .panel-body
            fieldset
              if error
                .alert.alert-dismissable.alert-danger.login-fail
                  button.close(type='button', data-dismiss='alert') &times;
                  p.
                    #{error}
              .form-group
                .col-lg-12
                  input#username.form-control(type='username', name='username', placeholder='Username', autofocus, required)
              .form-group
                .col-lg-12
                  input#password.form-control(type='password', name='password', placeholder='Password', required)
          .panel-footer
            a(href="/profile/recover" class="pull-left btn-height") Lost password

            button.pull-right.btn.btn-primary(type='submit') Login
            a(href="/register" class="btn btn-white pull-right") Register
            .clearfix

    .col-xs-12.col-sm-4
      .panel.panel-default#login
        .panel-heading
          h4 Alternative Logins
        ul.list-group
          li.list-group-item 
            a(href="/login/github") Login with Github
          li.list-group-item 
            a(href="/login/google") Login with Google
          li.list-group-item 
            a(href="/login/twitter") Login with Twitter 
          li.list-group-item 
            a(href="/login/facebook") Login with Facebook 
