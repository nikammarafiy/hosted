extends layout

block flash 
  - var flash = 4; 
block body
  .row
    .col-lg-4.col-lg-offset-4
      .panel.panel-default#login
        .panel-heading
          h4 Login
        form.bs-example.form-horizontal(method='post', action='')
          .panel-body
            fieldset
              if error
                .alert.alert-dismissable.alert-danger.login-fail
                  button.close(type='button', data-dismiss='alert') &times;
                  p.
                    #{error}
              .form-group
                .col-lg-12
                  input#username.form-control(type='username', name='username', placeholder='Username', autofocus, required)
              .form-group
                .col-lg-12
                  input#password.form-control(type='password', name='password', placeholder='Password', required)
          .panel-footer
            button.pull-right.btn.btn-primary(type='submit') Login
            a(href="/register" class="btn btn-white pull-right") Register
            .clearfix

