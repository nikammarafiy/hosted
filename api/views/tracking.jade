extends layout


block flash
  - var flashClass = "col-xs-12 col-sm-6 col-sm-offset-3";

block body
  .row
    .col-xs-12.col-sm-6.col-sm-offset-3
      .panel.panel-default#tracking
        .panel-heading
          h4.head Tracking
        .panel-body
          dl.dl-horizontal.device-details
            dt Tracked user
            dd= trackedUser.username
            dt Tracked device
            dd= share.trackedDeviceDevicename

            dt Status
            dd= share.accepted ? "Accepted" : "Pending"

        .panel-footer
          -if(!share.accepted)
            form.bs-example.form-horizontal(method='post', action='/tracking/#{share.id}/accept')
              button.pull-right.btn.btn-primary(type='submit', value="") Accept

            form.bs-example.form-horizontal(method='post', action='/tracking/#{share.id}/delete')
              button.pull-right.btn.btn-danger(type='submit', value="delete") Decline

          -else 
            form.bs-example.form-horizontal(method='post', action='/tracking/#{share.id}/delete')
              button.pull-left.btn.btn-danger(type='submit', value="delete") Untrack

          .clearfix

